{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "es5", "es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "tsBuildInfoFile": ".next/tsbuildinfo",
    "assumeChangesOnlyAffectDirectDependencies": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "disableSolutionSearching": true,
    "disableReferencedProjectLoad": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".build/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    ".build",
    "out",
    "dist",
    "build",
    "public",
    "prisma/migrations",
    "vitest.config.ts",
    "vitest.setup.tsx",
    "__tests__/**/*",
    "**/*.test.ts",
    "**/*.draft",
    "**/*.draft/**",
    "scripts/**/*",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "e2e/**/*",
    "stories/**/*",
    ".storybook/**/*"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
