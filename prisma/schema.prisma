  processing
  succeeded
  failed
  canceled
  refunded
}

model Payment {
  id               String        @id @default(cuid())
  contractId       String
  periodo          String
  monto            Float
  fechaVencimiento DateTime
  fechaPago        DateTime?
  estado           PaymentStatus @default(pendiente)
  metodoPago       String?
  reciboPdfPath    String?
  nivelRiesgo      RiskLevel     @default(bajo)

