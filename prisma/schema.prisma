  id String @id @default(cuid())

  // Company/API Key
  companyId    String?
  company      Company?          @relation(fields: [companyId], references: [id], onDelete: SetNull)
  apiKeyId     String?
  apiKey       ApiKey?           @relation(fields: [apiKeyId], references: [id], onDelete: SetNull)
  oauthTokenId String?
  oauthToken   OAuthAccessToken? @relation(fields: [oauthTokenId], references: [id], onDelete: SetNull)

  // Request
  method  String // GET, POST, PUT, DELETE
  path    String // /api/v1/properties
  query   Json?
  body    Json?
  headers Json?

  // Response
  statusCode   Int
  responseBody Json?
  responseTime Int // ms

  // Metadata
  ipAddress String
  userAgent String?

  // Rate limiting
  rateLimitHit Boolean @default(false)

  // Error
  error String? @db.Text

  timestamp DateTime @default(now())

  @@index([companyId])
  @@index([apiKeyId])
  @@index([oauthTokenId])
  @@index([method])
  @@index([path])
  @@index([statusCode])
  @@index([timestamp])
  @@map("api_logs")
}

