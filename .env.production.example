# PRODUCTION ENVIRONMENT VARIABLES - INMOVA APP
# Copiar a .env.production y llenar con valores reales

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/inmova_production"

# ===========================================
# NEXTAUTH
# ===========================================
NEXTAUTH_URL="https://inmovaapp.com"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# ===========================================
# AWS S3 (File Storage)
# ===========================================
AWS_ACCESS_KEY_ID="your-key"
AWS_SECRET_ACCESS_KEY="your-secret"
AWS_BUCKET="inmova-production"
AWS_REGION="eu-west-1"

# ===========================================
# STRIPE (Payments)
# ===========================================
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ===========================================
# EMAIL (SMTP)
# ===========================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="noreply@inmovaapp.com"
SMTP_PASS="your-app-password"

# ===========================================
# TWILIO (SMS)
# ===========================================
TWILIO_ACCOUNT_SID="ACxxxxx"
TWILIO_AUTH_TOKEN="your-token"
TWILIO_PHONE_NUMBER="+34600000000"

# ===========================================
# REDIS (Cache/Queue)
# ===========================================
REDIS_URL="redis://localhost:6379"
UPSTASH_REDIS_REST_URL="https://..."
UPSTASH_REDIS_REST_TOKEN="..."

# ===========================================
# MONITORING
# ===========================================
SENTRY_DSN="https://..."
SENTRY_ORG="inmova"
SENTRY_PROJECT="inmova-app"

# ===========================================
# AI (Optional)
# ===========================================
OPENAI_API_KEY="sk-..."
ANTHROPIC_API_KEY="sk-ant-..."

# ===========================================
# TESTING (for server tests)
# ===========================================
TEST_DATABASE_URL="postgresql://user:password@localhost:5432/inmova_test"
TEST_USER_EMAIL="admin@inmova.app"
TEST_USER_PASSWORD="Admin123!"

# ===========================================
# SERVER CONFIG
# ===========================================
NODE_ENV="production"
PORT="3000"
