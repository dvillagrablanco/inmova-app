# PRODUCTION ENVIRONMENT VARIABLES
# Copia este archivo a .env.production y configura los valores reales

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/inmova_prod"

# NextAuth
NEXTAUTH_URL="https://inmovaapp.com"
NEXTAUTH_SECRET="tu-secret-ultra-seguro-aqui-minimo-32-caracteres"

# Analytics (OBLIGATORIO para landing)
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_HOTJAR_ID="1234567"
NEXT_PUBLIC_CLARITY_ID="xxxxxxxxxx"

# App
NEXT_PUBLIC_BASE_URL="https://inmovaapp.com"
NODE_ENV="production"

# Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="tu-email@gmail.com"
SMTP_PASS="tu-app-password"

# Storage
AWS_REGION="eu-west-1"
AWS_BUCKET="inmova-production"
AWS_ACCESS_KEY_ID="tu-access-key"
AWS_SECRET_ACCESS_KEY="tu-secret-key"

# Stripe
STRIPE_SECRET_KEY="sk_live_xxxx"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_xxxx"

# Twilio
TWILIO_ACCOUNT_SID="ACxxxx"
TWILIO_AUTH_TOKEN="xxxx"
TWILIO_PHONE_NUMBER="+34123456789"

# Redis (opcional)
REDIS_URL="redis://localhost:6379"

# Sentry (opcional)
SENTRY_DSN="https://xxxx@sentry.io/xxxx"

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES="true"
NEXT_PUBLIC_ENABLE_VIRTUAL_TOURS="false"
