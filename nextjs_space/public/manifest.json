{
  "name": "INMOVA - Innovación Inmobiliaria",
  "short_name": "INMOVA",
  "description": "Sistema profesional de gestión inmobiliaria y property management con capacidades offline",
  "start_url": "/dashboard",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#ffffff",
  "theme_color": "#000000",
  "orientation": "any",
  "lang": "es-ES",
  "dir": "ltr",
  "icons": [
    {
      "src": "/inmova-logo-icon.jpg",
      "sizes": "192x192",
      "type": "image/jpeg",
      "purpose": "any maskable"
    },
    {
      "src": "/inmova-logo-icon.jpg",
      "sizes": "512x512",
      "type": "image/jpeg",
      "purpose": "any maskable"
    }
  ],
  "categories": ["business", "productivity", "finance"],
  "screenshots": [
    {
      "src": "/inmova-logo-cover.jpg",
      "sizes": "1280x720",
      "type": "image/jpeg",
      "form_factor": "wide",
      "label": "Dashboard principal de INMOVA"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Ver el panel de control principal",
      "url": "/dashboard",
      "icons": [{ "src": "/inmova-logo-icon.jpg", "sizes": "192x192" }]
    },
    {
      "name": "Edificios",
      "short_name": "Edificios",
      "description": "Gestionar edificios y propiedades",
      "url": "/edificios",
      "icons": [{ "src": "/inmova-logo-icon.jpg", "sizes": "192x192" }]
    },
    {
      "name": "Pagos",
      "short_name": "Pagos",
      "description": "Gestionar pagos de rentas",
      "url": "/pagos",
      "icons": [{ "src": "/inmova-logo-icon.jpg", "sizes": "192x192" }]
    },
    {
      "name": "Mantenimiento",
      "short_name": "Mantenimiento",
      "description": "Ver solicitudes de mantenimiento",
      "url": "/mantenimiento",
      "icons": [{ "src": "/inmova-logo-icon.jpg", "sizes": "192x192" }]
    },
    {
      "name": "Notificaciones",
      "short_name": "Notificaciones",
      "description": "Ver notificaciones del sistema",
      "url": "/notificaciones",
      "icons": [{ "src": "/inmova-logo-icon.jpg", "sizes": "192x192" }]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "application/pdf", "text/*"]
        }
      ]
    }
  },
  "prefer_related_applications": false
}
