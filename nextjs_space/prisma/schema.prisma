  empleado
  autonomo
  estudiante
  jubilado
  desempleado
}

enum EstadoCivil {
  soltero
  casado
  divorciado
  viudo
}

enum CandidateStatus {
  nuevo
  en_revision
  preseleccionado
  aprobado
  rechazado
}

