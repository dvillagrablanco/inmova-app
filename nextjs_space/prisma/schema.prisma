enum ApprovalStatus {
  pendiente
  aprobado
  rechazado
}

model Expense {
  id                String          @id @default(cuid())
  buildingId        String?
  unitId            String?
  providerId        String?
  concepto          String
  categoria         ExpenseCategory
  monto             Float
  fecha             DateTime
  facturaPdfPath    String?
  notas             String?         @db.Text
  requiereAprobacion Boolean        @default(false)
  estadoAprobacion  ApprovalStatus? @default(pendiente)
