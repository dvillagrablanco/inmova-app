model Template {
  id                String           @id @default(cuid())
  nombre            String
  tipo              TemplateType
  contenido         String           @db.Text
  variables         String[]         @default([])
  activo            Boolean          @default(true)
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  @@map("templates")
}

