# ============================================
# VARIABLES DE ENTORNO PARA PRODUCCIÓN
# inmovaapp.com
# ============================================

# ===== BASE DE DATOS =====
# Usar Vercel Postgres (recomendado) o base de datos externa
# Vercel Postgres configurará esto automáticamente si usas su servicio
DATABASE_URL="postgresql://usuario:password@host:5432/database"

# URL alternativa para migraciones (solo si usas PgBouncer)
# DIRECT_URL="postgresql://usuario:password@host:5432/database"

# ===== NEXT AUTH =====
# URL de producción (tu dominio)
NEXTAUTH_URL="https://inmovaapp.com"

# Secret para JWT - GENERAR UNO ÚNICO
# Ejecuta: openssl rand -base64 32
NEXTAUTH_SECRET="CAMBIAR-POR-SECRET-SEGURO-GENERADO"

# ===== ENTORNO =====
NODE_ENV="production"

# ===== SENTRY (OPCIONAL) =====
# Para monitoreo de errores
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# ===== STRIPE (SI USAS PAGOS) =====
STRIPE_SECRET_KEY="sk_live_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ===== EMAIL (OPCIONAL) =====
# Para notificaciones por email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="tu-email@gmail.com"
SMTP_PASSWORD="tu-password-o-app-password"
SMTP_FROM="noreply@inmovaapp.com"

# ===== AWS S3 (OPCIONAL) =====
# Para almacenar archivos/imágenes
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_BUCKET_NAME=""
AWS_REGION="eu-west-1"
AWS_FOLDER_PREFIX="production/"

# ===== REDIS (OPCIONAL) =====
# Para caché y rate limiting
REDIS_URL=""
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# ===== ANALYTICS (OPCIONAL) =====
NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_MIXPANEL_TOKEN=""

# ===== OTROS SERVICIOS (OPCIONAL) =====
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# ===== WEBHOOKS (OPCIONAL) =====
WEBHOOK_SECRET="CAMBIAR-POR-SECRET-SEGURO"

# ===== RATE LIMITING =====
# Ajustar según necesidades
RATE_LIMIT_ENABLED="true"

# ===== LOGS =====
LOG_LEVEL="info"
